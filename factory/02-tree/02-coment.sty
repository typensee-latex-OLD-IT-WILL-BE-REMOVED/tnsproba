% -- Comments -- %

% #1 : color
%
% #2 : node
% #3 : comment
\newcommand\ptreeComment{\@ifstar{\ptree@comment@star}{\ptree@comment@no@star}}

\newcommand\ptree@comment@no@star[3][black]{
	\node [anchor=mid west, xshift=.5cm, yshift=0cm] at (#2.mid -| ptreecomment coord) {%
		\textcolor{#1}{#3}%
	};
}



\newcommand\ptree@comment@star[3][black]{
	\node [anchor=mid west, xshift=.75cm, yshift=0cm] at (#2.mid) {%
		\textcolor{#1}{#3}%
	};
}
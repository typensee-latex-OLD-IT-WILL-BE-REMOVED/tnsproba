% == PACKAGES USED == %

\RequirePackage{forest}
\usetikzlibrary{calc}


% == DEFINITIONS == %

\useforestlibrary{linguistics}

% Global settings

\forestset{
    declare count = {connections}{1}, 
	%
    apweight/.style = {
    	edge label = {
				node[pos=.5,sloped,above, fill=white]{#1}
			}
		},
    bpweight/.style = {
    	edge label = {
				node[pos=.5,sloped,below, fill=white]{#1}
			}
		},
    pweight/.style = {
    	edge label={
				node[midway, fill=white]{#1}
			}
		},
    pweight*/.style = {},
}


% Sources
